#:kivy 1.11.1
<MainWidget>:
    orientation:'vertical'
    canvas:
        Color:
            rgb:0.5,0.7,0.8
        Rectangle:
            size: self.size
    BoxLayout:
        orientation:'horizontal'
        size_hint: (1,0.1)
        spacing: 10
        Label:
        text:
            text: 'SUPERVISORIO DO TANQUE'
            size_hint_x: None
            width: 300
        BoxLayout:
            orientation:'vertical'
            size_hint_x:None
            width: 400
            Label:
                text: 'Configurções'
            BoxLayout:
                orientation:'horizontal'
                Button:
                    text: "MODBUS"
                Button:
                    text: "Scan Time"
        Image:
            id: img_con
            size_hint_x: None
            width: 80
            source: 'imgs/desconectado.png'
            pos_hint: {'top':1, 'right':1}
