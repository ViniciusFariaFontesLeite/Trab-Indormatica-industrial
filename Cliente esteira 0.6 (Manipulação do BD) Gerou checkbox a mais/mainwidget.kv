#:kivy 1.11.1

<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: .1,0.1,0.1
        Rectangle:
            size: self.size
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1,0.1)
        spacing: 10
        Label:
            text: 'SUPERVISÓRIO ESTEIRA v1.0'
            size_hint_x: 1
            

        BoxLayout:
